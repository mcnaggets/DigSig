<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.kate.ui.MainController">
   <children>
       <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
              <VBox spacing="10">
                 <children>
                     <HBox spacing="10">
                        <children>
                            <Button onAction="#loadFile" text="Загрузить файл" />
                            <Button onAction="#saveFile" text="Сохранить файл" />
                            <Button onAction="#signFile" text="Подписать файл" />
            
                            <Button onAction="#verifyFile" text="Проверить подпись" />
                            <Button onAction="#unSignFile" text="Удалить подпись" />
            
                            <Button onAction="#showKeys" text="Показать ключи" />
                        </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10">
                     <children>
                        <Label text="Введите подпись" />
                           <TextField fx:id="signatory" text="sign" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                     <TextArea fx:id="fileContent" wrapText="true" VBox.vgrow="ALWAYS" />
                     <Label fx:id="verify" />
                 </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
              </VBox>
          </children>
       </StackPane>
   </children>
</AnchorPane>
